{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "prefer-const": "error",
        "no-var": "error",
        "no-multi-spaces": "error",
		"no-multiple-empty-lines": ["error", { "max": 3, "maxEOF": 1, "maxBOF": 0 }],
        "no-empty-function": "error",
		"no-floating-decimal": "error",
		"no-inline-comments": "error",
		"no-lonely-if": "error",
		"max-lines": ["warn", {"skipBlankLines": true, "skipComments": true, "max": 1000}],
		"eqeqeq": "warn",
		"default-case": "error",
		"max-depth": ["warn", 4],
		"max-params": ["warn", 3],
		"no-redeclare": "warn",
		"prefer-template": "warn",
		"no-useless-return": "error",
		"no-cond-assign": "error",
		"no-const-assign": "error"
	}
}